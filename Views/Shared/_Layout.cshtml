<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            padding-top: 0px;
        }

        .navbar a:link {
            color: white;
            text-decoration: none;
        }

        .navbar a:visited {
            color: silver;
        }

        .navbar a:hover {
            color: green;
            transition: 1s;
            font-size: 1.2em;
        }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <a class="navbar-brand" href="#">Southgate Mobile Village</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("About", "About", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Contact", "Contact", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Approval Form", "PreApprovedCustomer", "Customer")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Available Homes", "Index", "Home4Sale")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Admin", "AddHome4Sale", "AddSale")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Enrollment", "Index", "Enrollment")
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Southgate Mobile Village</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
